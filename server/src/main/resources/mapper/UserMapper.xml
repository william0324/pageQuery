<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.romaneekang.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.romaneekang.entity.User">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="info" column="info" jdbcType="OTHER" typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="balance" column="balance" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        phone,info,status,
        balance,create_time,update_time
    </sql>
    <select id="findAllUser" resultType="java.lang.Integer">
        select count(*)
        from user
    </select>


    <select id="queryUserByPage" resultMap="BaseResultMap"
            parameterType="com.romaneekang.dto.PageDto">
        select
            <include refid="Base_Column_List"/>
        from
            user

        <if test="sortBy != null and isAsc == true">
            order by ${sortBy}
        </if>
        <if test="sortBy != null and isAsc == false">
            order by ${sortBy} desc
        </if>
        limit 2,#{pageSize}
    </select>

</mapper>
